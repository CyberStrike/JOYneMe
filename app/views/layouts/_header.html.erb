<!DOCTYPE html>
<html>
<head>
  <title>WythMe</title>
  <%= stylesheet_link_tag  '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', '//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css',  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  'application', "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js",  'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  	<div class="container-fluid">
			<div class="navbar-header">	
				<a class="navbar-brand" href="/">WythMe</a>
			</div>

			<!-- different views in the navbar based on log-in-status/current user -->

			<div class="pull-right">
			<% if current_user %>
					<span>
							<%= link_to user_path(current_user) do %>
									Hello, <%= current_user.username.capitalize %>!
							<% end %>

					</span>
					<span> | <%= link_to 'Log Out', signout_path, method: :delete, data: { confirm: 'Are you sure?' } %></span>
			<% else %>

				<%= render 'sessions/form' %>


		 <% end %> 
		 </div> <!--class="#pull-right" -->

			


		</div>
	</nav>
 <br>
