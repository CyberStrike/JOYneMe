<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h2><%= @event.description %></h2>
		<hr>

			<p><em>Happening:</em>
			 <%= @event.date %> at <%= @event.time %>   
		

		<p><em>Meet at:</em>
		<% if !@event.location.nil? %>
			 <%= @event.location.capitalize %>,   
		<% end %> 


		<%= @event.street_address %>, <%= @event.zip_code %></p>

		<hr> 

		<!-- feel like I'm about to need a method -->
		<div>

		Organizer: <%= @event_owner.username %> <%= image_tag @event_owner.avatar.url(:thumb), class: "organizer pull-right" %>

		<br>
		<br>
		<br>
		<br>

		<p>Going:</p>

		<% if !@attendees.nil? %>
			<%= render 'list_attendees' %>
		<% else %>
			<p>No one's coming wyth yet!</p>
		<% end %> 

		</div>

		<hr>

		<% event_attendee = @event.attendees.find_by user_id: current_user.id %>
					
					<% if event_attendee.nil? %>

						<%= form_for(@attendee) do |f| %>
							<%= f.hidden_field :event_id, value: @event.id %>
	            <%= f.submit %>
	          <% end %> 

	        <% else %>

	        	<%= link_to 'Unjoin', attendee_path(event_attendee.id)  , method: :delete, data: { confirm: 'Are you sure?' } %>

	       	<% end %>

		

	</div>	

