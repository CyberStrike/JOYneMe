<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create New Event</h4>
      </div>
      <div class="modal-body">

        <%= form_for(@event) do |f| %>
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :description, 'Event' %>
          <%= f.text_field :description %>
        </div>

      <!--  <div class="field">
      <select name="event[category]">
        <option value="">Event Categroy</option>
        <option value="Food & Drink">Food & Drink</option>
        <option value="Exercise">Exercise</option>
        <option value="Entertainment">Entertainment</option>
        <option value="Other">Other</option>
      </select>
      </div>
       -->

       <div class="field">
      <select name="event[neighborhood]">
        <option value="">Neighborhood</option>
        <option value="Wynwood">Wynwood</option>
        <option value="Brickell">Brickell</option>
        <option value="Downtown">Downtown</option>
        <option value="South Beach">South Beach</option>
        <option value="Other">Other</option>
      </select>
      </div>

        <div class="field">
          <%= f.label :location %>
          <%= f.text_field :location %>
        </div>

        
         <div class="field">
          <%= f.label :street_address %>
          <%= f.text_field :street_address %>
        </div>

        <div class="field">
          <%= f.label :zip_code %>
          <%= f.text_field :zip_code %>
        </div>

        <!-- datetime_local_field? -->

          <div class="field">
          <%= f.label :datetime %>
          <%= f.datetime_select :datetime, :ampm => true %>
        </div>

        <div class="actions text-center">
          <%= f.submit :class => 'btn btn-custom btn-md btn-create' %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>




