		
<table class="table">
	<thead>
		<tr>
			<th>Event</th>
			<th>Location</th>
			<th>Going</th>
			<th>Join</th>
		</tr>
	</thead>
	<tbody>
		
		<% @events.each do |event| %>
		

			<%= content_tag_for(:tr, event) do %>
				<td><%= event.description %> </td>
				<td><%= event.location %> </td>
				<td><%= event.users.count %> </td>
				<td> <%= link_to user_events_join_path(@user) do %>
            <button class="btn btn-lg btn-custom">
              Create New Event
            </button>
          <% end %> </td>
			<% end %>
			


		

		<% end %>

	</tbody>


</table>